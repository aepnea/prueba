<%- model_class = Track -%>

<div class="page-header">
  <h1>Race</h1>
</div>

  <div class="row">
    <% @tracks.each do |track| %>
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <!--<img src="..." alt="...">-->
          <div class="caption">
            <h3><%=track.track%></h3>
            <p><%= track.time_elapsed %></p>
            <p>File Name: <%= track.gpx_file_name %></p>
            <p>Created At: <%= track.created_at %></p>

            <%= link_to "See More", maps_maps_view_path(:id => track.id), class:"btn btn-welcu" %>

            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        track_path(track),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Estas seguro?')) },
                        :class => "btn btn-danger" %>
          </div>
        </div>
      </div>
